<!DOCTYPE html>
<html>
<head>
    <title>category</title>
    <link rel="stylesheet" href="../stylesheets/category.css">
    <%-include('../partials/header.ejs');-%>
<body>
<div id="wrap">
    <%-include('../partials/nav.ejs');-%>
</div>
<%-include('../partials/pick_icon.ejs');-%>
<!--픽 고정배너-->
<div id="C_container">
    <div class="cateItem1">
        <ul class="cate_inav">
            <li><a href="#"><img src="../images/home.svg" alt="홈 로고"></a></li> >
            <% currentCategories.reverse()%>
            <% currentCategories.forEach( category => {%>
            <li><a href=<%='/product?categorySeq='+category.categorySeq%>><%= category.categoryName %></a></li>
            <% });%>
            <% currentCategories.reverse()%>
        </ul>
        <div class="cate_nav">
            <button class="cate_dog">강아지</button>
            <button class="cate_cat">고양이</button>
        </div>
    </div>
    <div class="cateItem2">
        <div class="cate_text"><%= currentCategories[0].categoryName+" 카테고리에 상품이 "+products.pnTotal.toLocaleString()+"개 있습니다."%></div>
        <div class="cate_sort">
            <ul>
                <li>인기순</li>
                <li>낮은 가격순</li>
                <li>높은 가격순</li>
            </ul>
        </div>

        <ul class="cate_ani_best">
            <% if (products.contents.length != 0) { %>
                <% products.contents.forEach(function(product){ %>
                    <li> <%- include('../partials/product', {product: product});%></li>
                <% }); %>
            <% } else { %>
                <tr>
                    <td>등록된 상품이 없습니다./td>
                </tr>
            <% } %>
        </ul>

    </div>
</div>
<%-include('../partials/pagination', {products: products});-%>
<%-include('../partials/footer.ejs');-%>
</body>
</html>